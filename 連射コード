javascript:(()=>{const textBase=prompt("送信するメッセージ（基本部分）:");if(!textBase)return;const sp=confirm("is_special=1で送信？");const countPrompt=prompt("送信回数(infで無限):","1");const delayPrompt=prompt("送信間隔(ms):","1000");const delay=parseInt(delayPrompt)||1000;const inf=(countPrompt||"").toLowerCase()==="inf";const total=inf?Infinity:parseInt(countPrompt)||1;alert(inf?"無限連射開始（停止はリロード）":"送信開始");let sent=0;let lastRandom="";const loop=()=>{const btn=document.querySelector(%27#post_btn');const msg=document.querySelector('#post_form_single');const chk=document.querySelector('#is_special');if(!btn||!msg){console.warn("投稿欄が見つからん、停止");return}let rand;do{rand=String.fromCharCode(97+Math.floor(Math.random()*26))}while(rand===lastRandom);lastRandom=rand;msg.value=textBase+rand;chk.checked=sp;btn.dispatchEvent(new MouseEvent('click',{bubbles:true,cancelable:true}));sent++;console.log(%60送信 ${sent} 回: ${msg.value}%60);if(!inf&&sent>=total){alert(%60完了 ${sent} 回送信%60);return}setTimeout(loop,delay)};loop();})();
